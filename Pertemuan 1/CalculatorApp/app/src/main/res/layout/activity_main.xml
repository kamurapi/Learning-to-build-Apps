<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <include layout="@layout/calculator_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_delete"
                android:text="C"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_openbracket"
                android:text="("
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_closebracket"
                android:text=")"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_division"
                android:text="/"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num7"
                android:text="7"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num8"
                android:text="8"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num9"
                android:text="9"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_multiply"
                android:text="X"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num4"
                android:text="4"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num5"
                android:text="5"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num6"
                android:text="6"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_substrack"
                android:text="-"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num1"
                android:text="1"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num2"
                android:text="2"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num3"
                android:text="3"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add"
                android:text="+"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_point"
                android:text="."
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_num0"
                android:text="0"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_backspace"
                android:text="BK"
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_equal"
                android:text="="
                android:textSize="30dp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBg"
                android:textColor="@color/colorFuncBtnText"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>